@model SportDiary.ViewModels.TrainingEntries.TrainingEntryAllViewModel

@{
    ViewData["Title"] = "Delete Training Entry";
}

<h1>Delete</h1>

<h3>Сигурен ли си?</h3>

<dl class="row">
    <dt class="col-sm-2">Diary</dt>
    <dd class="col-sm-10">@Model.DiaryLabel</dd>

    <dt class="col-sm-2">Sport</dt>
    <dd class="col-sm-10">@Model.SportName</dd>

    <dt class="col-sm-2">Duration</dt>
    <dd class="col-sm-10">@Model.DurationMinutes min</dd>

    <dt class="col-sm-2">Calories</dt>
    <dd class="col-sm-10">@Model.Calories</dd>

    <dt class="col-sm-2">Distance</dt>
    <dd class="col-sm-10">@(@Model.DistanceKm.HasValue ? $"{Model.DistanceKm:0.##} km" : "-")</dd>
</dl>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
