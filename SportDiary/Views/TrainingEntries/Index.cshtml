@model IEnumerable<SportDiary.ViewModels.TrainingEntries.TrainingEntryAllViewModel>

@{
    ViewData["Title"] = "Training Entries";
}

<h1>Training Entries</h1>
<!-- test commit -->

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Diary</th>
            <th>Sport</th>
            <th>Duration</th>
            <th>Calories</th>
            <th>Distance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.DiaryLabel</td>
                <td>@e.SportName</td>
                <td>@e.DurationMinutes min</td>
                <td>@e.Calories</td>
                <td>@(e.DistanceKm.HasValue ? $"{e.DistanceKm:0.##} km" : "-")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@e.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@e.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
