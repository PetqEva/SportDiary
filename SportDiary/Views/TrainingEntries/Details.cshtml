@model SportDiary.ViewModels.TrainingEntries.TrainingEntryDetailsViewModel

@{
    ViewData["Title"] = "Entry Details";
}

<h1>Details</h1>

<dl class="row">
    <dt class="col-sm-2">Diary</dt>
    <dd class="col-sm-10">
        <a asp-controller="TrainingDiaries" asp-action="Details" asp-route-id="@Model.TrainingDiaryId">
            @Model.DiaryLabel
        </a>
    </dd>

    <dt class="col-sm-2">Sport</dt>
    <dd class="col-sm-10">@Model.SportName</dd>

    <dt class="col-sm-2">Duration</dt>
    <dd class="col-sm-10">@Model.DurationMinutes min</dd>

    <dt class="col-sm-2">Calories</dt>
    <dd class="col-sm-10">@Model.Calories</dd>

    <dt class="col-sm-2">Distance</dt>
    <dd class="col-sm-10">@(@Model.DistanceKm.HasValue ? $"{Model.DistanceKm:0.##} km" : "-")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
