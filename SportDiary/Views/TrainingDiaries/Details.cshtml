@model SportDiary.ViewModels.TrainingDiaries.TrainingDiaryDetailsViewModel

@{
    ViewData["Title"] = "Diary Details";
}

<h1>Details</h1>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">
        <a asp-controller="UserProfiles" asp-action="Details" asp-route-id="@Model.UserProfileId">
            @Model.UserName
        </a>
    </dd>

    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "-")</dd>
</dl>

<hr />

<h3>Entries</h3>

<p>
    <a asp-controller="TrainingEntries"
       asp-action="Create"
       asp-route-diaryId="@Model.Id"
       class="btn btn-primary">
        Add Entry
    </a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>

@if (!Model.Entries.Any())
{
    <p>No entries yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sport</th>
                <th>Duration</th>
                <th>Calories</th>
                <th>Distance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Entries)
            {
                <tr>
                    <td>@e.SportName</td>
                    <td>@e.DurationMinutes min</td>
                    <td>@e.Calories</td>
                    <td>@(e.DistanceKm.HasValue ? $"{e.DistanceKm:0.##} km" : "-")</td>
                    <td>
                        <a asp-controller="TrainingEntries" asp-action="Details" asp-route-id="@e.Id">Details</a> |
                        <a asp-controller="TrainingEntries" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
