@model SportDiary.ViewModels.TrainingDiaries.TrainingDiaryAllViewModel

@{
    ViewData["Title"] = "Delete Training Diary";
}

<h1>Delete</h1>

<h3>Сигурен ли си?</h3>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "-")</dd>
</dl>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
