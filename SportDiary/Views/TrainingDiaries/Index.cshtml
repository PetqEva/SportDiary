@model IEnumerable<SportDiary.ViewModels.TrainingDiaries.TrainingDiaryAllViewModel>

@{
    ViewData["Title"] = "Training Diaries";
}

<h1>Training Diaries</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Date.ToString("yyyy-MM-dd")</td>
                <td>@d.UserName</td>
                <td>@(string.IsNullOrWhiteSpace(d.Notes) ? "-" : d.Notes)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@d.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@d.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
