@using SportDiary.ViewModels.TrainingDiaries
@model TrainingDiaryDetailsViewModel

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<div class="row g-3 mb-4">
    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Тренировки</div>
                <div class="fs-4 fw-semibold">@Model.TotalEntries</div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Минути</div>
                <div class="fs-4 fw-semibold">@Model.TotalDurationMinutes</div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Калории</div>
                <div class="fs-4 fw-semibold">@Model.TotalCalories</div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Разстояние</div>
                <div class="fs-4 fw-semibold">@string.Format("{0:0.##} km", Model.TotalDistanceKm)</div>
            </div>
        </div>
    </div>
</div>

<dl class="row">
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Бележки</dt>
    <dd class="col-sm-10">@(string.IsNullOrWhiteSpace(Model.Notes) ? "-" : Model.Notes)</dd>
</dl>

<h4>Записи</h4>
@if (Model.Entries?.Any() == true)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Спорт</th>
                <th>Мин</th>
                <th>Ккал</th>
                <th>Км</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Entries)
        {
            <tr>
                <td>@e.SportName</td>
                <td>@e.DurationMinutes</td>
                <td>@e.Calories</td>
                <td>@(e.DistanceKm.HasValue ? $"{e.DistanceKm:0.##} km" : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>-</p>
}

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редакция</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>
