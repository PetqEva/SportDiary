@model TrainingDiary

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Бележки</dt>
    <dd class="col-sm-10">@(string.IsNullOrWhiteSpace(Model.Notes) ? "-" : Model.Notes)</dd>
</dl>

<h4>Записи</h4>
@if (Model.TrainingEntries?.Any() == true)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Спорт</th>
                <th>Мин</th>
                <th>Ккал</th>
                <th>Км</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.TrainingEntries)
        {
            <tr>
                <td>@e.SportName</td>
                <td>@e.DurationMinutes</td>
                <td>@e.Calories</td>
                <td>@(e.DistanceKm.HasValue ? $"{e.DistanceKm:0.##} km" : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>-</p>
}

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редакция</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>
