@using SportDiary.ViewModels.TrainingDiaries
@model TrainingDiaryDetailsViewModel

@{
    ViewData["Title"] = "Дневник – детайли";

    string dash(string? s) => string.IsNullOrWhiteSpace(s) ? "-" : s;
}

<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <div class="text-muted small mt-1">
            Дата: <strong>@Model.Date.ToString("yyyy-MM-dd")</strong>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-success"
           asp-controller="TrainingEntries"
           asp-action="Create"
           asp-route-diaryId="@Model.Id"
           asp-route-returnUrl="@Url.Action("Details", "TrainingDiaries", new { id = Model.Id })">
            + Нов запис
        </a>


        <a class="btn btn-outline-primary"
           asp-action="Edit"
           asp-route-id="@Model.Id">
            Редакция
        </a>

        <a class="btn btn-outline-danger"
           asp-action="Delete"
           asp-route-id="@Model.Id">
            Изтриване
        </a>

        <a class="btn btn-outline-secondary" asp-action="Index">Назад</a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Записи</div>
                <div class="fs-4 fw-semibold">@Model.TotalEntries</div>
            </div>
        </div>
    </div>

    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Общо мин</div>
                <div class="fs-4 fw-semibold">@Model.TotalDurationMinutes</div>
            </div>
        </div>
    </div>

    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Общо ккал</div>
                <div class="fs-4 fw-semibold">@Model.TotalCalories</div>
            </div>
        </div>
    </div>

    <div class="col-6 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Общо км</div>
                <div class="fs-4 fw-semibold">@($"{Model.TotalDistanceKm:0.##} km")</div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Бележки</h5>
        <p class="mb-0">@dash(Model.Notes)</p>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
    <h4 class="mb-0">Записи</h4>
</div>

@if (Model.Entries?.Any() == true)
{
    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Спорт</th>
                    <th class="text-end">Мин</th>
                    <th class="text-end">Ккал</th>
                    <th class="text-end">Км</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Entries)
                {
                    <tr>
                        <td><span class="badge bg-dark">@e.SportName</span></td>
                        <td class="text-end">@e.DurationMinutes</td>
                        <td class="text-end">@e.Calories</td>
                        <td class="text-end text-nowrap">@(e.DistanceKm.HasValue ? $"{e.DistanceKm:0.##} km" : "-")</td>

                        <td class="text-end text-nowrap">
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-controller="TrainingEntries"
                               asp-action="Details"
                               asp-route-id="@e.Id">
                                Детайли
                            </a>

                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="TrainingEntries"
                               asp-action="Edit"
                               asp-route-id="@e.Id">
                                Редакция
                            </a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-controller="TrainingEntries"
                               asp-action="Delete"
                               asp-route-id="@e.Id">
                                Изтриване
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mb-0">
        Няма записи към този дневник. Натисни <strong>„+ Нов запис“</strong>, за да добавиш първия.
    </div>
}
