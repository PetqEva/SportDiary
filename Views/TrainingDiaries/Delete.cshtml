@model TrainingDiary

@{
    ViewData["Title"] = "Изтриване";
}

<h1>@ViewData["Title"]</h1>

<p class="text-danger">Сигурна ли си, че искаш да изтриеш този дневник?</p>

<dl class="row">
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Потребител</dt>
    <dd class="col-sm-10">@Model.UserProfile?.Name</dd>

    <dt class="col-sm-2">Бележки</dt>
    <dd class="col-sm-10">@(string.IsNullOrWhiteSpace(Model.Notes) ? "-" : Model.Notes)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a class="btn btn-secondary" asp-action="Index">Отказ</a>
</form>