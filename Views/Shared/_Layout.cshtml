<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportDiary</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportDiary.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    SportDiary
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="UserProfiles"
                                   asp-action="Details">
                                    Профил
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-success"
                                   asp-controller="UserProfiles"
                                   asp-action="Create">
                                    Създай профил
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-primary"
                                   asp-controller="UserProfiles"
                                   asp-action="Edit">
                                    Редакция
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="UserProfiles"
                                   asp-action="Delete">
                                    Изтриване
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="TrainingDiaries"
                                   asp-action="Index">
                                    Дневници
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="TrainingEntries"
                                   asp-action="Index">
                                    Записи
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Right menu (Login / Logout) -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - SportDiary -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
