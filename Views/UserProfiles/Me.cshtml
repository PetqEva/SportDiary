@model UserProfile

@{
    ViewData["Title"] = "Моят профил";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Име</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Години</dt>
    <dd class="col-sm-10">@Model.Age</dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit">Редакция</a>
</p>

<h4>Моите дневници</h4>
@if (Model.TrainingDiaries?.Any() == true)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Бележки</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.TrainingDiaries.OrderByDescending(x => x.Date))
        {
            <tr>
                <td>@d.Date.ToString("yyyy-MM-dd")</td>
                <td>@(string.IsNullOrWhiteSpace(d.Notes) ? "-" : d.Notes)</td>
                <td class="text-end">
                    <a asp-controller="TrainingDiaries" asp-action="Details" asp-route-id="@d.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>-</p>
}
