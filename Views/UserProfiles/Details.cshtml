@model UserProfile

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Име</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Години</dt>
    <dd class="col-sm-10">@Model.Age</dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редакция</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>