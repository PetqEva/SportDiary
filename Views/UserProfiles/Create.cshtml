@model SportDiary.ViewModels.UserProfiles.EditUserProfileVm

@{
    ViewData["Title"] = "Нов профил";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Име</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Години</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label">Пол</label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- избери --</option>
            <option value="Male">Мъж</option>
            <option value="Female">Жена</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartWeightKg" class="form-label">Стартови килограми</label>
        <input asp-for="StartWeightKg" class="form-control" />
        <span asp-validation-for="StartWeightKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CurrentWeightKg" class="form-label">Текущи килограми</label>
        <input asp-for="CurrentWeightKg" class="form-control" />
        <span asp-validation-for="CurrentWeightKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HeightCm" class="form-label">Височина (см)</label>
        <input asp-for="HeightCm" class="form-control" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ActivityLevel" class="form-label">Активност</label>
        <select asp-for="ActivityLevel" asp-items="Model.ActivityOptions" class="form-select">
            <option value="">-- избери --</option>
        </select>
        <span asp-validation-for="ActivityLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Създай</button>
    <a class="btn btn-secondary" asp-action="Details">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

