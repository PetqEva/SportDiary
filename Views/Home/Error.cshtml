@model SportDiary.Models.ErrorViewModel
@{
    ViewData["Title"] = "Грешка (500)";
}

<div class="container py-5">
    <h1 class="mb-3">Вътрешна грешка.</h1>
    <p class="text-muted">Възникна проблем при обработката на заявката (500).</p>

    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Начало</a>
</div>
