@model SportDiary.ViewModels.Calculators.TdeeInputVm
@using SportDiary.ViewModels.Calculators

@{
    ViewData["Title"] = "TDEE калкулатор";
    var result = ViewBag.Result as TdeeResultVm;

    string bmiLabel(double bmi) =>
        bmi < 18.5 ? "Поднормено" :
        bmi < 25 ? "Нормално" :
        bmi < 30 ? "Наднормено" : "Затлъстяване";

    string bmiBadge(double bmi) =>
        bmi < 18.5 ? "bg-warning text-dark" :
        bmi < 25 ? "bg-success" :
        bmi < 30 ? "bg-warning text-dark" : "bg-danger";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row g-4">
        <div class="col-lg-6">
            <form asp-action="Tdee" method="post" class="card shadow-sm">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Пол</label>
                        <select asp-for="Gender" class="form-select"
                                asp-items="Html.GetEnumSelectList<Gender>()"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Age" class="form-label">Възраст (години)</label>
                        <input asp-for="Age" class="form-control" placeholder="пример: 30" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WeightKg" class="form-label">Тегло (кг)</label>
                        <input asp-for="WeightKg" class="form-control" placeholder="пример: 80" />
                        <span asp-validation-for="WeightKg" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HeightCm" class="form-label">Ръст (см)</label>
                        <input asp-for="HeightCm" class="form-control" placeholder="пример: 180" />
                        <span asp-validation-for="HeightCm" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ActivityMultiplier" class="form-label">Ниво на активност</label>
                        <select asp-for="ActivityMultiplier" class="form-select">
                            <option value="1.2">Заседнал (офис) — 1.2</option>
                            <option value="1.375">Лека (1–3 трен./седм.) — 1.375</option>
                            <option value="1.55">Умерена (3–5 трен./седм.) — 1.55</option>
                            <option value="1.725">Висока (6–7 трен./седм.) — 1.725</option>
                            <option value="1.9">Много висока (физ. труд/2 трен.) — 1.9</option>
                        </select>
                        <span asp-validation-for="ActivityMultiplier" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BodyFatPercent" class="form-label">Процент мазнини (по желание)</label>
                        <input asp-for="BodyFatPercent" class="form-control" placeholder="пример: 15" />
                        <span asp-validation-for="BodyFatPercent" class="text-danger"></span>
                        <div class="form-text">
                            Ако го попълниш, използваме Katch–McArdle (по-точно).
                        </div>
                    </div>

                    <button class="btn btn-primary w-100" type="submit">Изчисли</button>
                </div>
            </form>
        </div>

        <div class="col-lg-6">
           @if (result != null)
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h4 class="mb-1">Резултат</h4>
                    <div class="text-muted">
                        Метод: <strong>@result.Method</strong>
                    </div>
                </div>
            </div>

            <ul class="list-group mt-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>BMR (базов разход)</span>
                    <strong>@result.Bmr kcal</strong>
                </li>

                <!-- ✅ 1) TDEE да изпъква -->
                <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                    <span class="fw-semibold">Дневен калориен разход (TDEE)</span>
                    <strong class="fs-5 text-primary">@result.Tdee kcal</strong>
                </li>

                <!-- ✅ 2) Цветни стойности -->
                <li class="list-group-item d-flex justify-content-between">
                    <span>Дефицит -15%</span>
                    <strong class="text-danger">@result.Cut15 kcal</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <span>Дефицит -20%</span>
                    <strong class="text-danger">@result.Cut20 kcal</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <span>Покачване +10%</span>
                    <strong class="text-success">@result.Bulk10 kcal</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>BMI</span>
                    <span class="d-flex gap-2 align-items-center">
                        <strong>@result.Bmi</strong>
                        <span class="badge @bmiBadge(result.Bmi)">@bmiLabel(result.Bmi)</span>
                    </span>
                </li>

                @if (result.LeanBodyMassKg.HasValue)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Чиста маса (LBM)</span>
                        <strong>@result.LeanBodyMassKg.Value кг</strong>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Протеин (2 g/kg)</span>
                    <strong>@result.ProteinTargetG г</strong>
                </li>
            </ul>

            <div class="mt-3 small text-muted">
                Ориентир. Настройва се по тегло/мерки за 2–3 седмици.
            </div>

            <!-- ✅ 3) Бутон "Запази като дневна цел" -->
            <form asp-controller="NutritionTargets" asp-action="Save" method="post" class="mt-3">
                @Html.AntiForgeryToken()

                <input type="hidden" name="Calories" value="@result.Tdee" />
                <input type="hidden" name="ProteinGrams" value="@result.ProteinTargetG" />

                <button type="submit" class="btn btn-outline-primary w-100">
                    Запази като дневна цел
                </button>
            </form>
        </div>
    </div>

            }
            else
            {
                <div class="alert alert-secondary">
                    Попълни данните и натисни <strong>Изчисли</strong>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
