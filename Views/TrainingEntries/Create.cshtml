@using SportDiary.ViewModels.TrainingEntries
@model TrainingEntryFormVm

@{
    ViewData["Title"] = "Нов запис";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="TrainingDiaryId" class="form-label">Дневник</label>
        <select asp-for="TrainingDiaryId" class="form-select" asp-items="Model.Diaries">
            <option value="0">-- избери дневник --</option>
        </select>
        <span asp-validation-for="TrainingDiaryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SportName" class="form-label">Спорт</label>
        <input asp-for="SportName" class="form-control" />
        <span asp-validation-for="SportName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DurationMinutes" class="form-label">Продължителност (мин)</label>
        <input asp-for="DurationMinutes" class="form-control" type="number" min="0" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Calories" class="form-label">Калории</label>
        <input asp-for="Calories" class="form-control" type="number" min="0" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DistanceKm" class="form-label">Разстояние (км)</label>
        <input asp-for="DistanceKm" class="form-control" type="number" min="0" step="0.01" />
        <span asp-validation-for="DistanceKm" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>

    <a class="btn btn-secondary"
       href="@(string.IsNullOrWhiteSpace(Model.ReturnUrl) ? Url.Action("Index") : Model.ReturnUrl)">
        Назад
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
