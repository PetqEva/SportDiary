@model IEnumerable<TrainingEntry>

@{
    ViewData["Title"] = "Записи";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Нов запис</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Спорт</th>
            <th>Мин</th>
            <th>Ккал</th>
            <th>Км</th>
            <th>Дневник</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SportName</td>
            <td>@item.DurationMinutes</td>
            <td>@item.Calories</td>
            <td>@(item.DistanceKm.HasValue ? $"{item.DistanceKm:0.##} km" : "-")</td>
            <td>
                #@item.TrainingDiaryId
                @if (item.TrainingDiary != null)
                {
                    <span>| @item.TrainingDiary.Date.ToString("yyyy-MM-dd")</span>
                }
            </td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
