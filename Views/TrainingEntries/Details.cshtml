@model TrainingEntry

@{
    ViewData["Title"] = "Детайли";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Спорт</dt>
    <dd class="col-sm-10">@Model.SportName</dd>

    <dt class="col-sm-2">Мин</dt>
    <dd class="col-sm-10">@Model.DurationMinutes</dd>

    <dt class="col-sm-2">Ккал</dt>
    <dd class="col-sm-10">@Model.Calories</dd>

    <dt class="col-sm-2">Км</dt>
    <dd class="col-sm-10">@(Model.DistanceKm.HasValue ? $"{Model.DistanceKm:0.##} km" : "-")</dd>

    <dt class="col-sm-2">Дневник</dt>
    <dd class="col-sm-10">
        #@Model.TrainingDiaryId
        @if (Model.TrainingDiary != null)
        {
            <span>| @Model.TrainingDiary.Date.ToString("yyyy-MM-dd")</span>
        }
    </dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Редакция</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>
