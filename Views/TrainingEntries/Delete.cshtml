@model TrainingEntry

@{
    ViewData["Title"] = "Изтриване";
}

<h1>@ViewData["Title"]</h1>

<p class="text-danger">Сигурна ли си, че искаш да изтриеш този запис?</p>

<dl class="row">
    <dt class="col-sm-2">Спорт</dt>
    <dd class="col-sm-10">@Model.SportName</dd>
    <dt class="col-sm-2">Мин</dt>
    <dd class="col-sm-10">@Model.DurationMinutes</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a class="btn btn-secondary" asp-action="Index">Отказ</a>
</form>