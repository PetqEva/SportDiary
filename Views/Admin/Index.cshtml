@model SportDiary.ViewModels.Admin.AdminDashboardVm
@{
    ViewData["Title"] = "Админ панел";
}

<div class="container mt-4">
    <h1 class="mb-4">Админ панел</h1>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-dark text-white text-center p-4">
                <div class="opacity-75">Потребители</div>
                <div class="display-6 fw-bold">@Model.UsersCount</div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-success text-white text-center p-4">
                <div class="opacity-75">Дневници</div>
                <div class="display-6 fw-bold">@Model.DiariesCount</div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-warning text-white text-center p-4">
                <div class="opacity-75">Записи</div>
                <div class="display-6 fw-bold">@Model.EntriesCount</div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-3">
            <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-dark w-100 py-3">
                Потребители
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <a asp-controller="TrainingDiaries" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                Дневници
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-3">
            <a asp-controller="TrainingEntries" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                Записи
            </a>
        </div>
    </div>
</div>
